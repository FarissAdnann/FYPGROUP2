<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5DE90"
    tools:context=".Manage_Teacher">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekolah Kebangsaan Kuala Perlis"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="27dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Manage Teacher"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/addteacherbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:text="Register Teacher" />

    <Button
        android:id="@+id/removeteacherbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="300dp"
        android:text="Delete Teacher" />

    <Button
        android:id="@+id/updateteacherbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="380dp"
        android:text="Update Teacher" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_centerHorizontal="true"
        android:text="Log Out" />



</RelativeLayout>
